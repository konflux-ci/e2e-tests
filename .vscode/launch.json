    "version": "0.2.0",
    "configurations": [

        
        {
            "name": "Launch demo suites",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/cmd/e2e_test.go",
            "args": [
                "--ginkgo.v",
                "--ginkgo.focus=release-suite",
                // "--ginkgo.focus=e2e-demos-suite",
                "--ginkgo.junit-report=report.xml"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                // "GITHUB_TOKEN": "${input:ghToken}"
                "GITHUB_TOKEN": "${env.MY_GITHUB_TOKEN}"
            },

            "debugAdapter": "dlv-dap", 
            "showGlobalVariables": true
        }
    ],
    "inputs": [
